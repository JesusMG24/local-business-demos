<section id="contacto" class="max-w-6xl mx-auto px-6 py-16 bg-yellow-50">
  <h2 class="text-3xl md:text-4xl font-bold text-yellow-900 text-center mb-12">
    Contáctanos
  </h2>

  <form
    action="https://formsubmit.co/tu-email@correo.com"
    method="POST"
    class="max-w-2xl mx-auto grid grid-cols-1 gap-6"
  >
    <input
      type="text"
      name="name"
      placeholder="Tu nombre"
      required
      class="px-4 py-3 rounded-lg border border-yellow-300 focus:ring-2 focus:ring-yellow-700 focus:outline-none"
    />

    <input
      type="email"
      name="email"
      placeholder="Tu correo electrónico"
      required
      class="px-4 py-3 rounded-lg border border-yellow-300 focus:ring-2 focus:ring-yellow-700 focus:outline-none"
    />

    <textarea
      name="message"
      rows="5"
      placeholder="Tu mensaje"
      required
      class="px-4 py-3 rounded-lg border border-yellow-300 focus:ring-2 focus:ring-yellow-700 focus:outline-none"
    ></textarea>

    <button
      type="submit"
      class="bg-yellow-700 hover:bg-yellow-800 text-white font-semibold px-6 py-3 rounded-full shadow-lg transition-all"
    >
      Enviar Mensaje
    </button>
  </form>
</section>
