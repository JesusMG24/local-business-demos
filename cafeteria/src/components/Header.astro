<header class="bg-white shadow-md fixed top-0 left-0 w-full z-50">
  <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
    <a href="#inicio" class="flex items-center gap-2 text-2xl font-bold text-yellow-700">
      ☕ Cafetería Aromas
    </a>
    <nav class="hidden md:flex gap-8 text-gray-700 font-medium">
      <a href="#inicio" class="hover:text-yellow-700 transition">Inicio</a>
      <a href="#menu" class="hover:text-yellow-700 transition">Menú</a>
      <a href="#ubicacion" class="hover:text-yellow-700 transition">Ubicación</a>
      <a href="#contacto" class="hover:text-yellow-700 transition">Contacto</a>
    </nav>
    <button id="menu-btn" class="md:hidden text-2xl text-gray-700 focus:outline-none">
      ☰
    </button>
  </div>
  <nav
    id="mobile-menu"
    class="md:hidden bg-white border-t border-gray-200 hidden flex flex-col items-center py-4 space-y-4 text-gray-700 font-medium"
  >
    <a href="#inicio" class="hover:text-yellow-700">Inicio</a>
    <a href="#menu" class="hover:text-yellow-700">Menú</a>
    <a href="#ubicacion" class="hover:text-yellow-700">Ubicación</a>
    <a href="#contacto" class="hover:text-yellow-700">Contacto</a>
  </nav>
  <script is:inline>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    mobileMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  </script>
</header>
