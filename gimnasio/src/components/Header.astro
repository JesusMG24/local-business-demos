---
const links = [
  { name: "Inicio", href: "#inicio" },
  { name: "Servicios", href: "#servicios" },
  { name: "Planes", href: "#planes" },
  { name: "Contacto", href: "#contacto" },
];
---

<header class="bg-gray-900 text-white fixed top-0 left-0 w-full z-50 shadow-md">
  <div class="max-w-6xl mx-auto flex justify-between items-center p-4">
    <a href="#inicio" class="text-2xl font-extrabold tracking-wider text-blue-500 hover:text-blue-400 transition">
      GIMNASIO ENERG√çA
    </a>

    <nav class="hidden md:flex space-x-8">
      {links.map(link => (
        <a
          href={link.href}
          class="text-sm uppercase tracking-wider hover:text-blue-400 transition duration-300"
        >
          {link.name}
        </a>
      ))}
    </nav>

    <!-- Mobile menu button -->
    <button id="menu-btn" class="md:hidden text-white focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>

  <!-- Mobile nav -->
  <nav id="mobile-menu" class="hidden bg-gray-800 md:hidden flex flex-col space-y-4 p-4 text-center">
    {links.map(link => (
      <a
        href={link.href}
        class="text-sm uppercase tracking-wider hover:text-blue-400 transition duration-300"
      >
        {link.name}
      </a>
    ))}
  </nav>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const btn = document.getElementById("menu-btn");
            const menu = document.getElementById("mobile-menu");

            if (btn && menu) {
            // Toggle menu on hamburger click
            btn.addEventListener("click", () => {
                menu.classList.toggle("hidden");
            });

            const mobileLinks = menu.querySelectorAll("a");
            if (mobileLinks) {
                mobileLinks.forEach(link => {
                link.addEventListener("click", () => {
                    menu.classList.add("hidden");
                });
                });
            }
            }
        });
    </script>
</header>
