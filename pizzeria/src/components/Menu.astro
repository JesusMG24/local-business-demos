---
const menuItems = [
  {
    name: "Margarita Clásica",
    description: "Salsa de tomate artesanal, mozzarella fresca y hojas de albahaca.",
    price: "$120 MXN",
    image: "/images/pizza1.jpg"
  },
  {
    name: "Pepperoni Suprema",
    description: "Crujiente pepperoni, queso fundido y orégano fresco.",
    price: "$140 MXN",
    image: "/images/pizza2.jpg"
  },
  {
    name: "Hawaiana Dulce",
    description: "Jamón, piña, y un toque de miel sobre base de tomate.",
    price: "$135 MXN",
    image: "/images/pizza3.jpg"
  },
  {
    name: "4 Quesos",
    description: "Mozzarella, parmesano, gorgonzola y provolone en equilibrio perfecto.",
    price: "$150 MXN",
    image: "/images/pizza4.webp"
  },
];
---

<section id="menu" class="py-20 bg-gray-50 text-gray-800">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 text-red-600">
      Nuestro Menú
    </h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {menuItems.map((item) => (
        <div class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <img
            src={item.image}
            alt={item.name}
            loading="lazy"
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-1">{item.name}</h3>
            <p class="text-gray-600 text-sm mb-3">{item.description}</p>
            <p class="text-lg font-bold text-red-600">{item.price}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
